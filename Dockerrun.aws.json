{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "ui",
      "host": {
        "sourcePath": "/var/app/current/ui"
      }
    },
    {
      "name": "api",
      "host": {
        "sourcePath": "/var/app/current/api"
      }
    },
    {
      "name": "nginx-proxy-static",
      "host": {
        "sourcePath": "/var/app/current/proxy/html"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "ui",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${IMAGE_REPO_NAME_UI}:${IMAGE_TAG}",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "ui",
          "containerPath": "/usr/share/nginx/html",
          "readOnly": true
        }
      ]
    },
    {
      "name": "api",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${IMAGE_REPO_NAME_API}:${IMAGE_TAG}",
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "api",
          "containerPath": "/workdir",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "ui",
        "api"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-static",
          "containerPath": "/usr/share/nginx/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}
